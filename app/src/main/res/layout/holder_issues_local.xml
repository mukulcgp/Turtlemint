<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <ImageView
                    android:transitionName="image"
                    android:scaleType="centerCrop"
                    android:id="@+id/photo_image_view"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:background="@mipmap/ic_launcher_round"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                />

            <TextView
                    android:id="@+id/tv_name_local"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="22dp"
                    android:textSize="14sp"
                    android:textColor="@color/colorTextPrimary"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    app:layout_constraintStart_toEndOf="@id/photo_image_view"
                    app:layout_constraintTop_toTopOf="@id/photo_image_view"
                    app:layout_constraintEnd_toEndOf="parent"
                />

            <TextView
                android:id="@+id/tv_desc_local"
                android:layout_margin="8dp"
                android:textSize="11sp"
                android:textColor="@color/colorTextPrimary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLength="200"
                app:layout_constraintStart_toStartOf="@id/tv_name_local"
                app:layout_constraintTop_toBottomOf="@id/photo_image_view"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@id/tv_name_local"
                />

            <TextView
                android:id="@+id/tv_user_local"
                android:layout_margin="8dp"
                android:textSize="12sp"
                android:textColor="@color/colorTextPrimary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:gravity="center"

                app:layout_constraintTop_toBottomOf="@id/tv_desc_local"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                />

            <TextView
                android:id="@+id/tv_updated_local"
                android:layout_margin="8dp"
                android:textSize="12sp"
                android:textColor="@color/colorTextPrimary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:gravity="center"

                app:layout_constraintTop_toBottomOf="@id/tv_desc_local"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />



        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>


